#set( $title = "Welcome Page" )
#parse("public/templates/top.vm")

#if($username)
<h1>Welcome to Plenum $username</h1>
<div class="divContents indexLinkWrapper">
    <p><a class="content indexLink" href="/calendars">Calendars</a></p>
    <p><a class="content indexLink" href="/calendar">Calendar</a></p>
    <p><a class="content indexLink" href="/addcalendar">Add calendar</a></p>
    <p><a class="content indexLink" href="/delcalendar">Delete calendar</a></p>
    <p><a class="content indexLink" href="/events">Events</a></p>
    <p><a class="content indexLink" href="/delevent">Delete Event</a></p>
    <p><a class="content indexLink" href="/addevent">Add Event</a></p>
    <p><a class="content indexLink" href="/users">Users</a></p>
    <p><a class="content indexLink" href="/deluser">Delete User</a></p>
    <p><a class="content indexLink" href="/adduser">Add User</a></p>
    <p><a class="content indexLink" href="/maketemplate">Make Template</a></p>
</div>
#else
<h1>Please login first!</h1>
<form action="/" method="post" class="content" onsubmit="return validateUsername();">
    <div>
        <label for="username">Username:</label>
        <input type="text" placeholder="username" name="username" id="username" />
    </div>
    <div id="divSubmit">
        <input type="submit" value="Sign in" class="submit" />
    </div>
</form>
<form action="/signup" method="post" class="content" onsubmit="return validateUsername();">
    <div id="divSubmit">
        <input type="submit" value="Sign Up" class="submit" />
    </div>
</form>
#end

#parse("public/templates/bottom.vm")