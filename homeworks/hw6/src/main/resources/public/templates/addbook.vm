<h2>Add a new Book</h2>
#* <form action="/addbook" method="post" class="content" id="formAddBook"> *#
<form class="content" id="formAddBook">
    <h3>Book Information</h3>
    <div class="center">
        <div class="row">
            <label for="title">Title: </label>
            <input type="text" name="title" placeholder="title" id="title" required>
        </div>
        <div class="row">
            <label for="isbn">ISBN: </label>
            <input type="text" name="isbn" placeholder="isbn" id="isbn" required>
        </div>
        <div class="row">
            <label for="publisher">Publisher: </label>
            <input type="text" name="publisher" placeholder="publisher" id="publisher" required>
        </div>
        <div class="row">
            <label for="year">Year: </label>
            <input type="text" name="year" placeholder="year" id="year" required>
        </div>
    </div>
    <h3>Author Information</h3>
    <div class="center">
        <div class="row">
            <label for="name">Name: </label>
            <input type="text" name="name" placeholder="name" id="name" required>
        </div>
        <div class="row">
            <label for="nationality">Nationality: </label>
            <input type="text" name="nationality" placeholder="nationality" id="nationality" />
        </div>
        <div class="row">
            <label for="numOfBooks">Number of books: </label>
            <input type="number" name="numOfBooks" placeholder="1" id="numOfBooks" min="1" max="200"/>
        </div>
    </div>
    <br />
    <input type="submit" value="Add" id="submitAddAuthor" />
</form>

<script src="js/validate.js"></script>
<script src="js/addbook.js"></script>

<p><a class="content indexLink" href="/">Back to home</a></p>

#parse("public/templates/bottom.vm")